<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-0">限定公開動画へのアクセス</h2>
      </div>
      <div class="card-body">
        <%= form_with url: video_access_create_path, method: :post, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :video_id, "動画ID", class: "form-label" %>
            <%= f.text_field :video_id, class: "form-control", placeholder: "動画IDを入力してください" %>
          </div>

          <div class="mb-3">
            <%= f.label :password, "パスワード", class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力してください" %>
          </div>

          <div class="d-grid">
            <%= f.submit "アクセス", class: "btn btn-primary" %>
          </div>
        <% end %>

        <div class="mt-3 text-center">
          <%= link_to "動画一覧に戻る", video_access_index_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>
</div>
